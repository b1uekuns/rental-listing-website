<!-- Nút scroll to top -->
<button id="scrollToTop" class="scroll-to-top">
  <span>↑</span>
</button>

<!-- Script cho nút scroll to top và auto-hide alerts -->
<script>
  // Nút scroll to top
  const scrollToTopBtn = document.getElementById('scrollToTop');

  // Hiển thị/ẩn nút khi scroll
  window.addEventListener('scroll', function() {
    if (window.pageYOffset > 300) {
      scrollToTopBtn.style.display = 'block';
    } else {
      scrollToTopBtn.style.display = 'none';
    }
  });

  // Xử lý click nút scroll to top
  scrollToTopBtn.addEventListener('click', function() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });

  // Tự động ẩn thông báo sau 3 giây
  document.addEventListener('DOMContentLoaded', function() {
    const alerts = document.querySelectorAll('.alert');

    alerts.forEach(function(alert) {
      // Thêm hiệu ứng fade in
      alert.style.opacity = '0';
      alert.style.transform = 'translateY(-10px)';
      alert.style.transition = 'all 0.3s ease';

      // Fade in ngay lập tức
      setTimeout(function() {
        alert.style.opacity = '1';
        alert.style.transform = 'translateY(0)';
      }, 100);

      // Tự động ẩn sau 3 giây
      setTimeout(function() {
        alert.style.opacity = '0';
        alert.style.transform = 'translateY(-10px)';

        // Xóa hoàn toàn sau khi fade out
        setTimeout(function() {
          if (alert.parentNode) {
            alert.parentNode.removeChild(alert);
          }
        }, 300);
      }, 3000);
    });
  });
</script>

<style>
  .scroll-to-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    color: white;
    border: none;
    cursor: pointer;
    display: none;
    z-index: 1000;
    box-shadow: 0 4px 12px rgba(0, 191, 166, 0.3);
    opacity: 0.5;
    transition: all 0.3s ease;
    animation: pulse 2s infinite;
  }

  .scroll-to-top:hover {
    opacity: 1;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 191, 166, 0.4);
  }

  .scroll-to-top span {
    font-size: 18px;
    font-weight: bold;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 4px 12px rgba(0, 191, 166, 0.3);
    }
    50% {
      box-shadow: 0 4px 12px rgba(0, 191, 166, 0.6);
    }
    100% {
      box-shadow: 0 4px 12px rgba(0, 191, 166, 0.3);
    }
  }
</style>
